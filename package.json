{
	"name": "vmfa-rules-engine",
	"version": "1.4.1",
	"description": "Rule-based automatic folder assignment for media uploads",
	"author": "Per Soderlind",
	"license": "GPL-2.0-or-later",
	"main": "build/index.js",
	"scripts": {
		"build": "wp-scripts build src/js/index.js src/js/media-upload.js --output-path=build",
		"start": "wp-scripts start src/js/index.js src/js/media-upload.js --output-path=build",
		"lint:js": "wp-scripts lint-js src/js",
		"lint:css": "wp-scripts lint-style src/js/styles",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"i18n:pot": "wp i18n make-pot . languages/vmfa-rules-engine.pot --domain=vmfa-rules-engine --exclude=node_modules,vendor,tests",
		"i18n:po": "wp i18n update-po languages/vmfa-rules-engine.pot languages/",
		"i18n:mo": "wp i18n make-mo languages/",
		"i18n:json": "wp i18n make-json languages/ --no-purge",
		"i18n:php": "wp i18n make-php languages/",
		"i18n:build": "npm run i18n:pot && npm run i18n:po && npm run i18n:mo && npm run i18n:json && npm run i18n:php"
	},
	"devDependencies": {
		"@vitest/coverage-v8": "^4.0.18",
		"@wordpress/scripts": "^31.3.0",
		"jsdom": "^26.1.0",
		"vitest": "^4.0.18"
	},
	"dependencies": {
		"@dnd-kit/core": "^6.3.1",
		"@dnd-kit/sortable": "^10.0.0",
		"@dnd-kit/utilities": "^3.2.2",
		"@wordpress/api-fetch": "^7.38.0",
		"@wordpress/components": "^31.0.0",
		"@wordpress/element": "^6.38.0",
		"@wordpress/i18n": "^6.11.0",
		"@wordpress/icons": "^11.5.0"
	}
}